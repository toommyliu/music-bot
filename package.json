{
	"name": "music-bot",
	"packageManager": "yarn@3.2.1",
	"private": true,
	"workspaces": [
		"packages/*"
	],
	"scripts": {
		"lint": "turbo run lint && prettier --check --plugin-search-dir=. .",
		"build": "turbo run build",
		"format": "prettier --write --plugin-search-dir=. .",
		"prisma": "dotenv -e .env prisma",
		"deploy-commands": "yarn build && dotenv -e .env -v -- node ./packages/bot/dist/deploy.js",
		"start-bot": "dotenv -e .env -- node ./packages/bot/dist/index.js",
		"start-api": "dotenv -e .env -- node ./packages/api/dist/index.js",
		"prepare": "is-ci || husky install",
		"update": "yarn upgrade-interactive"
	},
	"devDependencies": {
		"@commitlint/cli": "^17.1.2",
		"@commitlint/config-angular": "^17.1.0",
		"@swc/cli": "^0.1.57",
		"@swc/core": "^1.3.14",
		"@swc/helpers": "^0.4.12",
		"@types/node": "^16.18.2",
		"@typescript-eslint/eslint-plugin": "^5.41.0",
		"@typescript-eslint/parser": "^5.41.0",
		"dotenv-cli": "^6.0.0",
		"eslint": "^8.26.0",
		"eslint-config-neon": "^0.1.39",
		"eslint-plugin-typescript-sort-keys": "^2.1.0",
		"husky": "^8.0.1",
		"is-ci": "^3.0.1",
		"prettier": "^2.7.1",
		"prettier-eslint": "^15.0.1",
		"prisma": "^4.6.0",
		"turbo": "^1.7.0",
		"typescript": "^4.8.4"
	}
}
